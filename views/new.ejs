<%- include('partials/header')%>

<div class="container">
    <h1 style="text-align: center;">Create a new Campground</h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="CampSite Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Picture">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="discription" placeholder="Discription">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary form-control">Submit</button>
                </div>
                
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>

<%- include('partials/footer')%>